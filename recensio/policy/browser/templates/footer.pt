<div id="footer" tal:define="portal context/portal_url">
   <img src="footer_bg_top.png" alt="grafisches Element" class='top'/>
   <div class="column_footer">
        <h2><a tal:attributes="href context/rezensionen/absolute_url | nothing" href="#" i18n:translate="reviews">Rezensionen</a></h2>
        <ul tal:repeat="index python:range(3)" class="easyticker">
            <li tal:repeat="mag view/getPublications"
                tal:attributes="style python: repeat['mag'].start and 'display: list-item' or 'display: None'">
                <a href="#"
                   tal:attributes="href mag/absolute_url"
                   tal:content="mag/title">
                    A magazine
                </a>
            </li>
        </ul>
    </div>
    <div class="column_footer">
        <h2><a href="#" tal:attributes="href string:${portal}/search?portal_type:list=Presentation+Monograph&portal_type:list=Presentation+Online+Resource&portal_type:list=Presentation+Article+Review&portal_type:list=Presentation+Collection">Präsentationen</a></h2>
        <ul>
        <li><a href="#" tal:attributes="href string:${portal}/search?portal_type:list=Presentation+Monograph">Monographien</a></li>
        <li><a href="#" tal:attributes="href string:${portal}/search?portal_type:list=Presentation+Article+Review">Aufsätze</a></li>
        <li><a href="#" tal:attributes="href string:${portal}/search?portal_type:list=Presentation+Online+Resource">Internetressourcen</a></li>
        </ul>   
    </div>
    <div class="column_footer">
        <h2><a href="#" tal:attributes="href context/themen-epochen-regionen/absolute_url | nothing">Themen <span>&bull;</span> Epochen <span>&bull;</span> Regionen</a></h2>
        <ul>
            <li tal:repeat="link view/drill_down_views | nothing">
                <a href="#"
                    tal:attributes="href link/url"
                    tal:content="link/title">Topic</a>
            </li>
        </ul>
    </div>
    <div class="column_footer">
        <h2><a href="#" tal:attributes="href context/konzept/mitmachen-bei-recensio.net/absolute_url | nothing" >mitmachen bei recensio.net</a></h2>
        <ul tal:define="member context/@@plone_portal_state/member;
                        isAnon context/@@plone_portal_state/anonymous;
                        homefolder context/portal_membership/getHomeUrl">
            <li><a href="#"
                   tal:condition="not: isAnon"
                   tal:attributes="href string:${homefolder}"
                   i18n:translate="">Manage your presentations</a></li>
            <li><a href="#"
                   tal:condition="not: isAnon"
                   tal:attributes="href string:%{homefolder}/folder_factories"
                   i18n:translate="">Create new presentation</a></li>
            <li><a href="#"
                   tal:condition="isAnon"
                   tal:attributes="href string:${portal}/@@register"
                   i18n:translate="">Register and create new presentations</a></li>
        </ul>
    </div>

    <div class="column_footer">
        <h2><a href="/RSS-feeds" tal:attributes="href context/RSS-feeds/absolute_url | nothing">RSS feeds</a></h2>
        <ul>
            <li tal:define="feed string:${context/RSS-feeds/new_reviews/absolute_url | nothing}/RSS">
                <a href="#" tal:attributes="href feed">
                    <img src="#" tal:attributes="src string:${portal}/++resource++recensio.theme.images/icon_rss_feed.gif" alt="RSS icon" />
                </a>
                <a href="#" tal:attributes="href feed">Neue Rezensionen</a>
            </li>
            <li tal:define="feed string:${context/RSS-feeds/new_presentations/absolute_url | nothing}/RSS">
                <a href="#" tal:attributes="href feed">
                    <img src="#" tal:attributes="src string:${portal}/++resource++recensio.theme.images/icon_rss_feed.gif" alt="RSS icon" />
                </a>
                <a href="#" tal:attributes="href feed">Neue Präsentationen</a>
            </li>
            <li tal:define="feed string:${context/RSS-feeds/new_discussions/absolute_url | nothing}/RSS">
                <a href="#" tal:attributes="href feed">
                    <img src="#" tal:attributes="src string:${portal}/++resource++recensio.theme.images/icon_rss_feed.gif" alt="RSS icon" />
                </a>
                <a href="#" tal:attributes="href feed">Neue Diskussionen</a>
            </li>
        </ul>
    </div>

    <div class="clear"></div>
    
    <img src="footer_bg_bottom.png" alt="grafisches Element" class='bottom' /> 
</div>

