<div id="extra-design-elements"
     tal:define="language context/@@plone_portal_state/language;
                 portal_url context/portal_url;
                 isAnon context/@@plone_portal_state/anonymous;">
  <div id="my_homepage_container" tal:condition="not:isAnon"
       tal:define="url_quote_plus python:modules['Products.PythonScripts.standard'].url_quote_plus;
                   member context/@@plone_portal_state/member;
                   memberurl python:url_quote_plus(member.getId());">
    <a id="my_homepage"
       tal:attributes="href string:${portal_url}/author/${memberurl}"
       tal:content="python:member.getProperty('fullname')"/>
  </div>

  <div id="footer"
       i18n:domain="recensio">

    <div class="column_footer">

      <div>
      </div>

      <div id="notes">
        <a href="#"
           tal:define="lang_suffix python:language != 'de' and '-'+language or ''"
           tal:attributes="href string:${portal_url}/impressum${lang_suffix}">Impressum</a>
      </div>

    </div>
  </div>

  <img id="philrom_logo"
       src="++theme++philrom.theme/++theme++philrom.theme/images/merlin-it.png"
       tal:attributes="src string:${portal_url}/++theme++philrom.theme/++theme++philrom.theme/images/merlin-${language}.png"
       title="Recensio.net"
       alt="Recensio.net Logo"/>

<object type="application/x-shockwave-flash"
        id="page_image"
        tal:define="swf_path string:${portal_url}/++resource++recensio.theme.images/main_${language}.swf;
                    alt_img_path string:${portal_url}/++resource++recensio.theme.images/mainimage_${language}.png"
        tal:attributes="data swf_path"
        width="900" height="150">

    <param name="movie" tal:attributes="value swf_path"/>
    <param name="wmode" value="opaque" />
    <embed wmode="opaque"
           width="900" height="150"
           tal:attributes="src swf_path">
    </embed>

    <img
        id="page_image"
        tal:attributes="src alt_img_path">

</object>
</div>
