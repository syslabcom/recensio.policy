<div id="extra-design-elements"
     tal:define="language context/@@plone_portal_state/language;
                 portal_url context/portal_url;
                 isAnon context/@@plone_portal_state/anonymous;">
  <div id="my_homepage_container" tal:condition="not:isAnon"
       tal:define="url_quote_plus python:modules['Products.PythonScripts.standard'].url_quote_plus;
                   member context/@@plone_portal_state/member;
                   memberurl python:url_quote_plus(member.getId());">
    <a id="my_homepage"
       tal:attributes="href string:${portal_url}/author/${memberurl}"
       tal:content="python:member.getProperty('fullname')"/>
  </div>

  <div id="footer"
       i18n:domain="recensio">

    <div class="column_footer">

      <div>
        <span>
          <span i18n:translate="message_supported_by">
            recensio.net ist ein Gemeinschaftsprojekt folgender Institutionen
          </span>
          </span><br />
          <a href="http://www.bsb-muenchen.de/"
             ><img tal:attributes="src string:${portal_url}/imgs/logos/bsb_logo.gif" src="imgs/logos/bsb_logo.gif"
             alt="Logo der Bayerischen Staatsbibliothek" /></a>
          <a href="http://www.uni-koeln.de/"
             ><img tal:attributes="src string:${portal_url}/imgs/logos/unikoeln-logo.png" src="imgs/logos/unikoeln-logo.png"
             alt="Logo der Universität Köln" /></a>
          <a href="http://www.ieg-mainz.de/likecms/index.php"
             ><img tal:attributes="src string:${portal_url}/imgs/logos/ieg_logo.png" src="imgs/logos/ieg_logo.jpg"
             alt="Logo des Institus für europäische Geschichte" /></a>
      </div>

      <div id="notes"
           tal:define="lang_suffix python:language != 'de' and '-'+language or ''">
        <a href="#"
           tal:attributes="href string:${portal_url}/impressum${lang_suffix}">Impressum</a>
        <a href="#"
           tal:attributes="href string:${portal_url}/datenschutz${lang_suffix}"
           i18n:translate="label_secondary_nav_datenschutz">Datenschutz</a>
      </div>

    </div>
  </div>

  <a id="recensio_logo_anchor"
     href="/"
     tal:attributes="href context/@@plone_portal_state/navigation_root_url">
    <img id="recensio_logo"
         src="++resource++recensio.theme.images/de/logo_recensio.png"
         tal:attributes="src string:${portal_url}/++resource++recensio.theme.images/${language}/logo_recensio.png"
         title="Recensio.net"
         alt="Recensio.net Logo"/>
  </a>

  <img id="page_image"
       tal:attributes="src string:${portal_url}/++resource++recensio.theme.images/mainimage_${language}.png"/> 

  <div id="social-media-header">
      <img tal:attributes="src string:${portal_url}/++resource++recensio.theme.images/social-media-icons.png"
           src="++resource++recensio.theme.images/social-media-icons.png" alt="Social Media Buttons" id="social-media-buttons-header" usemap="#socialmap-header" />
      <map name="socialmap-header">
          <area tal:attributes="href string:https://www.facebook.com/sharer/sharer.php?u=${portal_url}"
                shape="rect" coords="0,0,30,30" alt="fb" href="https://www.facebook.com/sharer/sharer.php?u=http://www.recensio.net">
          <area tal:attributes="href string:http://twitter.com/home?status=${portal_url}"
                shape="rect" coords="30,0,60,30" alt="twitter" href="http://twitter.com/home?status=http://www.recensio.net">
          <area tal:attributes="href string:https://www.linkedin.com/shareArticle?mini=true&amp;url=${portal_url}"
                shape="rect" coords="60,0,90,30" alt="twitter" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=http://www.recensio.net">
          <area tal:attributes="href string:https://plus.google.com/share?url=${portal_url}"
                shape="rect" coords="90,0,120,30" alt="twitter" href="https://plus.google.com/share?url=http://www.recensio.net">
      </map>
  </div>

</div>
