<div id="extra-design-elements"
     tal:define="language context/@@plone_portal_state/language;
                 portal_url context/portal_url;">
  <div id="footer"
       i18n:domain="recensio">

    <div class="column_footer">

      <div>
        <span>
          <a href="http://www.dfg.de"
             ><img src="imgs/logos/dfg_logo.png"
                   alt="Logo der deutschen Forschungsgemeinschaft"
                   class="logo"></a>
          &nbsp; recensio.net ist ein von der Deutschen
          Forschungsgemeinschaft gefördertes Gemeinschaftsprojekt
          folgender Institutionen
        </span><br />
        <a href="http://www.bsb-muenchen.de/"
           ><img src="imgs/logos/bsb_logo.gif"
                 alt="Logo der Bayerischen Staatsbibliothek"></a>
        <a href="http://www.dhi-paris.fr/"
           ><img src="imgs/logos/dhip_logo.png"
                 alt="Logo des deutschen historischen Instituts Paris"></a>
        <a href="http://www.ieg-mainz.de/likecms/index.php"
           ><img src="imgs/logos/ieg_logo.gif"
                 alt="Logo des Institus für europäische Geschichte"></a>
      </div>

      <div id="notes">
        <a href="#"
           tal:define="
lang_suffix python:language != 'de' and '-'+language or ''"
           tal:attributes="
href string:${portal_url}/impressum${lang_suffix}">Impressum</a>
      </div>

    </div>
  </div>

  <img id="recensio_logo"
       src="++resource++recensio.theme.images/de/logo_recensio.png"
       tal:attributes="
src string:${portal_url}/++resource++recensio.theme.images/${language}/logo_recensio.png"
       title="Recensio.net"
       alt="Recensio.net Logo"/>
</div>
