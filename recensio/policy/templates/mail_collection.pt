<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag=""
      i18n:domain="recensio">

<metal:block use-macro="context/main_template/macros/master">

<body>
    <metal:fill fill-slot="body">
        <ul tal:condition="view/errors">
            <li tal:repeat="error view/errors" tal:content="error">Error Message</li>
        </ul>
        <span i18n:translate="" tal:condition="not: view/errors"> Mail sending has been prepared. Mail will be sent to</span> <a href="" tal:attributes="href string:mailto:%{view/mail_to}s" tal:content="view/mail_to">test@test</a>
    </metal:fill>
</body>

</metal:block>
</html>
